<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Datos">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="29dp">
            <TextView
                    android:text="ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textview1" android:layout_weight="1"
                    android:textSize="24sp" android:textColor="@color/primary_text"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtID" android:layout_weight="1"
                    android:textSize="24sp" android:textColor="@color/primary_text"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="29dp">
            <TextView
                    android:text="Name"
                    android:layout_width="22dp"
                    android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_weight="1"
                    android:textSize="24sp" android:textColor="@color/primary_text"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtName" android:layout_weight="1"
                    android:textSize="24sp" android:textColor="@color/primary_text"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="29dp">
            <TextView
                    android:text="Username"
                    android:layout_width="21dp"
                    android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_weight="1"
                    android:textSize="24sp" android:textColor="@color/primary_text"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtUsername" android:layout_weight="1"
                    android:textSize="24sp" android:textColor="@color/primary_text"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Email"
                    android:layout_width="21dp"
                    android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="1"
                    android:textSize="24sp" android:textColor="@color/primary_text"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtEmail" android:layout_weight="1"
                    android:textSize="24sp" android:textColor="@color/primary_text"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>